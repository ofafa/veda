<%- include ../header %>
<p>User: <%= user %></p>
<form method="post" action="/medicine/edit/<%= medicine.name %>">
<p>Name: <input type="text" name="name" value=<%= medicine.name %>></p>
<p>Latest Price: <input type="number" name="price" value=<%= medicine.prices[medicine.prices.length-1].price %>></p>
<p>Position:
    <% console.log(medicine.position) %>
    <% if(medicine.position =='front') { %>
        <input type="radio" name="position" value="front" checked='true'>前櫃
    <% } else { %>
        <input type="radio" name="position" value="front">前櫃
    <% } %>
    <% if(medicine.position =='back') { %>
        <input type="radio" name="position" value="back" checked='true'>後櫃
    <% } else { %>
        <input type="radio" name="position" value="back">後櫃
    <% } %>
    <% if(medicine.position =='product') { %>
        <input type="radio" name="position" value="product" checked='true'>成藥
    <% } else { %>
        <input type="radio" name="position" value="product">成藥
    <% } %>
    <% if(medicine.position =='stock') { %>
        <input type="radio" name="position" value="stock" checked='true'>庫存
    <% } else { %>
        <input type="radio" name="position" value="stock">庫存
    <% } %>




<p>Row: <input type="number" name="row" value=<%= medicine.row %>></p>
<p>Col: <input type="number" name="col" value=<%= medicine.col %>></p>
<p>Index: <input type="number" name="index" value=<%= medicine.index %>></p>
<p>Info: <input type="text" name="info" value=<%= medicine.info %>></p>
<input type="submit" value="Save Changes">
</form>
